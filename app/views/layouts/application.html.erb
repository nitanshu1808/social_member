<!DOCTYPE html>
<html>
  <head>
    <title>SocialMember</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to I18n.t("app.name"), root_url, class: "navbar-brand" %>
        </div>
        <ul class="nav navbar-nav">
          <li class="active">
            <%= link_to I18n.t("app.home"), root_url %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_member %>
            <li>
              <%= link_to I18n.t("app.profile"), member_path(current_member) %>
            </li>
            <li>
              <%= link_to I18n.t("app.members"), members_path %>
            </li>
            <li>
              <%= link_to I18n.t("app.log_out"), destroy_member_session_path, method: :delete  %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>

    <div class="flash-messages">
      <% flash.each do |key, value| %>
        <div class="<%= flash_class(key) %> text-center flash-msg">
          <%= value %>
        </div>
      <% end %>
    </div>
    <div class="container-fluid">
      <%= yield %>
    </div>
  </body>
</html>
