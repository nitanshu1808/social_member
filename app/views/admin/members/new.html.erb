<div class="jumbotron text-center">
  <h2><%= I18n.t("app.create_member") %></h2>
</div>
<div class="new_member">
  <%= render 'admin/shared/error_messages', resource: @member %>
  <%= form_for @member, url: admin_members_path do |f| %>

    <div class="form-group">
      <%= f.label       :name, I18n.t("model.member.name") %>
      <%= f.text_field  :name, autofocus: true, class: "form-control" ,
      placeholder: I18n.t("app.enter_val", val: I18n.t("model.member.name")) %>
    </div>

    <div class="form-group">
      <%= f.label       :url, I18n.t("model.member.url") %>
      <%= f.text_field  :url, autofocus: true, class: "form-control" ,
      placeholder: I18n.t("app.enter_val", val: I18n.t("model.member.url")) %>
    </div>

    <div class="form-group">
      <%= f.label       :email, I18n.t("model.member.email") %>
      <%= f.text_field  :email, autofocus: true, class: "form-control" ,
      placeholder: I18n.t("app.enter_val", val: I18n.t("model.member.email")) %>
    </div>

    <%= f.hidden_field :password, value: '12345' %>

    <div class="form-group">
      <%= f.submit I18n.t("app.create"), class: "btn btn-success sign-in-btn" %>
    </div>
  <% end %>
</div>
